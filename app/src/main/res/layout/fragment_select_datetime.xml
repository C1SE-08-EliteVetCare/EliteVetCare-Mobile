<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Appointment.fragment_select_datetime">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingStart="20dp"
            android:textAppearance="@style/edit_text_font"
            android:text="Ngày Hẹn"/>
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/frm_view_calender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.elitevetcare.Appointment.Calender.fragment_calender_view_select_date"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:textSize="20dp"
            android:textAppearance="@style/edit_text_font"
            android:text="Thời Gian"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_hours_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_box_hour"
                android:inputType="number"
                android:maxLength="2"
                android:text="0"
                android:textAlignment="center"
                android:textAppearance="@style/edit_text_font"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" : "
                android:textAppearance="@style/edit_text_font"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_minute_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_box_minute"
                android:inputType="number"
                android:maxLength="2"
                android:text="00"
                android:textAlignment="center"
                android:textAppearance="@style/edit_text_font"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_9h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_time"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textAppearance="@style/edit_text_font"
                android:onClick= "asd"
                android:text="09:00 Sáng"
                android:textColor="@color/blue"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_9h30"
                android:onClick="onSelectTimeButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_time"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textAppearance="@style/edit_text_font"
                android:text="09:30 Sáng"
                android:textColor="@color/blue"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_10h"
                android:onClick="onSelectTimeButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_button_time"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textAppearance="@style/edit_text_font"
                android:text="10:00 Sáng"
                android:textColor="@color/blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_10h30"
                android:onClick="onSelectTimeButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_time"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textAppearance="@style/edit_text_font"
                android:text="10:30 Sáng"
                android:textColor="@color/blue"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_11h"
                android:onClick="onSelectTimeButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_time"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textAppearance="@style/edit_text_font"
                android:text="11:00 Sáng"
                android:textColor="@color/blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_15h"
                android:onClick="onSelectTimeButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_time"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textAppearance="@style/edit_text_font"
                android:text="15:00 Chiều"
                android:textColor="@color/blue"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_15h30"
                android:onClick="onSelectTimeButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_time"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textAppearance="@style/edit_text_font"
                android:text="15:30 Chiều"
                android:textColor="@color/blue"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_16h"
                android:onClick="onSelectTimeButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_button_time"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textAppearance="@style/edit_text_font"
                android:text="16:00 Chiều"
                android:textColor="@color/blue"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_done_select_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_1"
            android:text="@string/Next"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAppearance="@style/edit_text_font"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>