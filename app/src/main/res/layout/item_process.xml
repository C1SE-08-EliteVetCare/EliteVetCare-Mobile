<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/theme_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_theme_process"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

    <ImageView
        android:id="@+id/logo_dog"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/theme_process"
        android:layout_alignTop="@+id/theme_process"
        android:layout_alignBottom="@+id/theme_process"

        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/img_dog_avt" />

    <TextView
        android:id="@+id/txt_chusohuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chủ Sở Hữu: Cao Quoc Huy"
        android:layout_toEndOf="@+id/logo_dog"
        android:layout_alignTop="@+id/theme_process"
        android:layout_alignBottom="@+id/theme_process"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hôm nay | 14:00 PM"
        android:textSize="10dp"
        android:layout_toEndOf="@+id/logo_dog"
        android:layout_alignTop="@+id/theme_process"
        android:layout_alignBottom="@+id/theme_process"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_tuchoi"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_tuchoi"
        android:layout_alignBottom="@+id/logo_dog"
        android:layout_alignStart="@+id/logo_dog"
        android:layout_marginBottom="30dp"
        android:text="Từ chối"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="10dp"
        />


    <Button
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_chapnhan"
        android:layout_toEndOf="@+id/btn_tuchoi"
        android:layout_alignBottom="@+id/logo_dog"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:text="Chấp nhận cuộc hẹn"
        android:textSize="10dp"
        android:textColor="@android:color/white"
        />
</RelativeLayout>