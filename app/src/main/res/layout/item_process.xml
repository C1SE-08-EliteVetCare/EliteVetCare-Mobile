<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical= "5dp"
        android:orientation="vertical"
        android:background="@drawable/custom_input_box_white"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/process_appointment_avatar"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:src="@drawable/image_nonavatar_clinic"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_name_process_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textAppearance="@style/text_regular_font"
                    android:text="Chủ Sở hữu: "/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày "
                        android:textAppearance="@style/text_regular_font"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="|"
                        android:textAppearance="@style/text_regular_font"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ "
                        android:textAppearance="@style/text_regular_font"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/low_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Reject_appointment"
                android:layout_width="145dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_button_blue_border"
                android:text="@string/Reject"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="@color/blue"
                android:textAppearance="@style/text_regular_font"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_accept_appointment"
                android:layout_width="145dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_button_accept"
                android:text="@string/Accept"
                android:textAppearance="@style/text_regular_font"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>