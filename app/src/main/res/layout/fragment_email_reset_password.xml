<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.fragment_email_reset_password">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="20dp"
            android:padding="2dp"
            android:id="@+id/textView2"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textAppearance="@style/text_regular_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu" />

        <TextView
            android:layout_marginLeft="20dp"

            android:padding="2dp"
            android:textSize="15dp"
            android:id="@+id/textView4"
            android:layout_width="370dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/text_regular_font"
            android:text="Nhập địa chỉ email với tài khoản của bạn  " />


        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textAppearance="@style/text_regular_font"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="và chúng tôi sẽ gửi email xác nhận" />

        <TextView
            android:layout_marginLeft="20dp"

            android:textSize="15dp"
            android:textAppearance="@style/text_regular_font"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="để đặt lại mật khẩu của bạn." />

        <EditText
            android:id="@+id/edt_emailconfirm"
            android:layout_marginLeft="20dp"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input_box"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:layout_marginTop="30dp"
            android:hint="example@gmail.com"
            android:textSize="18dp"
            android:textAppearance="@style/text_regular_font" />

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_continue"
            android:layout_width="370dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button_1"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</FrameLayout>