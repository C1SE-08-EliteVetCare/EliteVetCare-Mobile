<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.fragment_home">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="300dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/txt_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Hi Radit" />

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/txt_hello"
            android:id="@+id/txt_rabbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Good Morning!" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="230dp"
            android:layout_toRightOf="@+id/txt_hello"
            android:id="@+id/img_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/image_logo" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/askda1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/theme_home_ui" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/askda1"
                    android:layout_alignEnd="@id/asd2"
                    android:layout_marginEnd="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:text="Chào mừng đến với phòng khám"
                    android:textSize="20dp" />
                <ImageView
                    android:id="@+id/asd2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dog_ui"
                    android:layout_alignTop="@id/askda1"
                    android:layout_alignBottom="@id/askda1"
                    android:layout_alignEnd="@id/askda1"/>
            </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginBottom="300dp"
                android:id="@+id/imgv_dogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/theme_home_ui"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="114dp"
                tools:ignore="MissingConstraints" />

            <ImageView

                android:layout_width="139dp"
                android:layout_height="147dp"
                android:src="@drawable/dog_ui"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="160dp"
                tools:ignore="MissingConstraints">

            </ImageView>


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chào mừng đến"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="154dp" />
            <TextView
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="với phòng khám"
                android:textSize="22dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="184dp" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="107dp"
                android:layout_height="37dp"
                android:background="@drawable/rectangle_5"
                android:text="Bắt đầu"

                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="247dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phân loại"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="329dp" />

            <ImageButton
                android:id="@+id/imbtn_vet"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/vector_vet"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="371dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/vet_icon"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="393dp" />

            <ImageButton
                android:id="@+id/imbtn_pet"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/vector_pet"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="269dp"
                tools:layout_editor_absoluteY="371dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/pet_icon"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="290dp"
                tools:layout_editor_absoluteY="393dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng khám"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="464dp" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thú cưng"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="281dp"
                tools:layout_editor_absoluteY="464dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Các phòng khám gần đây"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="505dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tất cả"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="334dp"
                tools:layout_editor_absoluteY="505dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_list_clinic_around"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="4"
                android:orientation="vertical"
                tools:listitem="@layout/item_view_clinic_around"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="532dp"
                tools:ignore="MissingConstraints"></androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</FrameLayout>