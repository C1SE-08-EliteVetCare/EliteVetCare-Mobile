<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Pets.fragment_pet_list_treatment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/pet_list_treatment_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:tabSelectedTextAppearance="@style/tab_title"
                app:tabTextAppearance="@style/tab_title_unselected"
                app:tabIndicatorColor="@color/blue"
                app:tabSelectedTextColor="@color/blue"
                app:tabTextColor="@color/light_gray" />
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pet_treatment_viewpage2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/pet_list_treatment_tabLayout"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>