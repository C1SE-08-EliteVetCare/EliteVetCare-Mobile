<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_pet_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical= "5dp"
        android:elevation="5dp"
        android:background="@drawable/custom_input_box_white"
        android:orientation="horizontal">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/avatar_pet_pet_list"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/avt_cat"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_name_of_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đen"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textAppearance="@style/text_regular_font"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="15dp"
                android:background="@color/low_gray"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txt_Species_and_Breed_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/text_regular_font"
                android:textSize="10dp"
                android:text="Mèo | Mèo Anh lông ngắn " />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>